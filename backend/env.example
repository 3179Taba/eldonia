# Node.js Backend Environment Variables Example

# Server Settings
NODE_ENV=development
PORT=3001
HOST=localhost

# JWT Settings
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Database (PostgreSQL Aurora)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eldonia_portal
DB_USER=eldonia_user
DB_PASSWORD=your-db-password-here
DATABASE_URL=postgresql://eldonia_user:your-db-password-here@localhost:5432/eldonia_portal

# Redis (ElastiCache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# AWS Services
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here

# S3 Settings
S3_BUCKET_NAME=eldonia-portal-media
S3_BUCKET_REGION=ap-northeast-1
S3_ACCESS_KEY_ID=your-s3-access-key-here
S3_SECRET_ACCESS_KEY=your-s3-secret-key-here

# CloudFront
CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# Google AI Studio (Gemini API)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro
GEMINI_DAILY_LIMIT=1000

# Email Service (SES)
SES_REGION=ap-northeast-1
SES_ACCESS_KEY_ID=your-ses-access-key-here
SES_SECRET_ACCESS_KEY=your-ses-secret-key-here
SES_FROM_EMAIL=noreply@eldonia-nex.com

# Payment Service
STRIPE_SECRET_KEY=your-stripe-secret-key-here
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret-here

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here
CSRF_SECRET=your-csrf-secret-here

# CORS Settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
DATADOG_API_KEY=your-datadog-api-key-here

# Development
DEBUG=true
NODE_TLS_REJECT_UNAUTHORIZED=0

