# ===========================================
# Eldonia Web 環境変数テンプレート
# ===========================================

# ===========================================
# フロントエンド環境変数 (.env.local)
# ===========================================

# Supabase設定
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# API設定
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# アプリケーション設定
NEXT_PUBLIC_APP_NAME=Eldonia Web
NEXT_PUBLIC_APP_VERSION=1.8.0
NEXT_PUBLIC_APP_ENV=development

# 外部サービス設定
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# 開発設定
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_LOG_LEVEL=debug

# ===========================================
# バックエンド環境変数 (.env)
# ===========================================

# Django設定
SECRET_KEY=your_django_secret_key_here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# データベース設定
DATABASE_URL=postgresql://username:password@localhost:5432/eldonia_db
DB_NAME=eldonia_db
DB_USER=eldonia_user
DB_PASSWORD=your_db_password_here
DB_HOST=localhost
DB_PORT=5432

# Redis設定
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# AIサービス設定
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# 決済設定
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# ファイルストレージ設定
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_STORAGE_BUCKET_NAME=your_s3_bucket_name_here
AWS_S3_REGION_NAME=ap-northeast-1

# メール設定
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_email_password_here

# セキュリティ設定
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ログ設定
LOG_LEVEL=DEBUG
LOG_FILE=logs/eldonia.log

# 開発設定
ENVIRONMENT=development
API_VERSION=v1
TIME_ZONE=Asia/Tokyo

# ===========================================
# 開発者固有設定
# ===========================================

# 開発者名
DEVELOPER_NAME=your_name_here
DEVELOPER_EMAIL=your_email@example.com

# 開発環境設定
DEV_MODE=true
AUTO_RELOAD=true
DEBUG_TOOLBAR=true

# テスト設定
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_db
TEST_REDIS_URL=redis://localhost:6379/1

# ===========================================
# 本番環境設定（開発時は無効）
# ===========================================

# 本番環境では以下を設定
# DEBUG=False
# ALLOWED_HOSTS=your-domain.com,www.your-domain.com
# ENVIRONMENT=production
# LOG_LEVEL=INFO
